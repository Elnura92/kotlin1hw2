<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_url"
        android:layout_width="match_parent"
        android:hint="@string/et_url"
        android:layout_marginTop="@dimen/margin_et"
        android:layout_height="wrap_content"
        android:autofillHints="" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_btn"
        android:text="@string/btn_submit"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/btn_random"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/margin_btn"
        android:text="@string/btn_random"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_random"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/margin_iv"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/img_descr" />

</LinearLayout>